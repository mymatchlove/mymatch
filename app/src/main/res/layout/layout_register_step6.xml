<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lay_six"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_medium"
        android:text="Add Your photo and get much better responses!"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/register_divider_gray"/>



    <androidx.cardview.widget.CardView
        android:layout_width="210dp"
        android:layout_height="252dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:gravity="center"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp">

        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/male"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:padding="20dp"
        android:layout_marginTop="15dp"
        android:text="Note: Photo must be in .JPG or .PNG format, not larger than 3 MB."/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_choose"
        style="@style/Widget.MyApp.ThemeButton"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:focusable="false"
        android:text="Choose Photo" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_six_submit"
        style="@style/Widget.MyApp.ThemeButton"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:focusable="false"
        android:text="Finish" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_six_prev"
        style="@style/Widget.MyApp.WhiteButton"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:focusable="false"
        android:text="Previous" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/lbl_all_rights_reserved"
        android:textColor="@color/black"
        android:textSize="15sp"/>

</LinearLayout>