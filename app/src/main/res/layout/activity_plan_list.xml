<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="mymatch.love.activities.PlanListActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        android:orientation="vertical">

        <com.loopeer.shadow.ShadowView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone"
            android:layout_below="@id/toolbar"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/transparent"
            app:cornerRadius="5dp"
            app:shadowColor="@color/colorAccent"
            app:shadowMargin="5dp"
            app:shadowRadius="5dp">

            <HorizontalScrollView
                style="@style/HorizontalScrollViewStyle"
                app:layout_gravity="center">

                <LinearLayout
                    android:id="@+id/layoutPlanCategory"
                    style="@style/RadioButtonParentLayoutStyle">

                </LinearLayout>
            </HorizontalScrollView>

        </com.loopeer.shadow.ShadowView>

        <HorizontalScrollView
            android:id="@+id/layoutPlanDurationsMain"
            style="@style/HorizontalScrollViewStyle"
            android:visibility="gone"
            android:layout_height="wrap_content"
            app:layout_gravity="center">

            <LinearLayout
                android:id="@+id/layoutPlanDurations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

            </LinearLayout>

        </HorizontalScrollView>

        <TextView
            android:id="@+id/lblHighlighted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/labels"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_highlight"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center"
            android:padding="10dp"
            android:text="Get extra 15 Days with this pack!"
            android:textColor="@color/white"
            android:visibility="gone"/>

        <com.github.islamkhsh.CardSliderViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:auto_slide_time="-1"
            app:cardSlider_indicator="@id/indicator"
            app:cardSlider_baseShadow="5dp"
            app:cardSlider_otherPagesWidth="30dp"
            app:cardSlider_pageMargin="5dp"
            app:cardSlider_smallAlphaFactor="0.9"
            app:cardSlider_smallScaleFactor="0.8"/>

            <com.github.islamkhsh.CardSliderIndicator
                android:id="@+id/indicator"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                app:indicatorsToShow="5"/>

    </LinearLayout>

    <include
        layout="@layout/layout_loader"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="No Plans Available"
        android:textColor="@color/red"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btn_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        style="@style/Widget.MyApp.ThemeButton"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="@color/White"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <include
        layout="@layout/layout_loader"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>